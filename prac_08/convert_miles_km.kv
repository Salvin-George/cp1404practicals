BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                on_release: app.handle_increment(1)
            Button:
                text: 'Down'
                on_release: app.handle_increment(-1)
    Button:
        text: 'Convert m to km'
        on_release: app.handle_calculation()
    Label:
        id: output_label
        text: app.output
        color: (1, 1, 0, 1)
